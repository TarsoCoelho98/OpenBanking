@model IEnumerable<OpenBanking.Data.Models.Participant>

@{
    ViewData["Title"] = "Index";
}

<h4>Participantes</h4>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApiEndpointUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogoUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="@item.ApiEndpointUrl" target="_blank">@item.ApiEndpointUrl</a>
                </td>
                <td>
                    <a href="@item.LogoUrl" target="_blank">@item.LogoUrl</a>
                </td>
            </tr>
        }
    </tbody>
</table>
